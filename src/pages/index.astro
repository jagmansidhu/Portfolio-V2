<style>
  .button-group {
    display: flex;
    gap: 12px;
    margin-top: 24px;
    flex-wrap: wrap; /* Keeps it responsive */
  }

  .button.w-button {
    /* 1. Make them a consistent width */
    min-width: 140px; 
    
    /* 2. Center the content inside */
    display: inline-flex;
    align-items: center;
    justify-content: center; /* Centers text and icon together */
    
    /* 3. Spacing and Alignment */
    gap: 10px; 
    padding: 12px 20px;
    
    /* 4. Ensure it looks like a button */
    text-align: center;
    white-space: nowrap; /* Prevents text from jumping to a second line */
  }

  .button-icon {
    width: 18px;
    height: 18px;

    filter: brightness(0) invert(1);
    display: block;
  }

  .hero-intro {
  display: flex;
  align-items: center; /* Vertically centers the text with the image */
  justify-content: space-between;
  gap: 2rem; /* Space between text and image */
}

.hero-text {
  flex: 1; /* Takes up remaining space */
}

.hero-image {
  width: 250px;
  height: 250px;
  border-radius: 50%;
  object-fit: cover; 
  
  /* Increase scale to zoom in (removes space from all sides) */
  scale: 1.3; 

  /* First value: Horizontal (50% is centered)
     Second value: Vertical (Increase this to 70-90% to "push" the top of the image out of view)
  */
  object-position: 50% 85%; 
  
  overflow: hidden;
  /* Optional: Adds space between image and text now that it's on the left */
  margin-right: 10px; 
}

@media (max-width: 768px) {
  .hero-intro {
    flex-direction: column; 
    text-align: center;
  }
  .hero-image {
    margin-right: 0;
    margin-bottom: 20px;
  }
}

</style>